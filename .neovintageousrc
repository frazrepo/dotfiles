" Type :h neovintageousrc for help.
" SublimeText vim emulator
" Activate ctrl key in sublime text settings
" Preferences/Settings : "vintageous_use_ctrl_keys": true,
"    "vintageous_handle_keys": {
"             "<C-f>": false
"    }
" Version > 1.16 (26/03/2019)

let mapleader=<space>

"Keep on home row
nnoremap H ^
nnoremap L $
nnoremap Âµ # 

" Copy /Paste
nnoremap <leader>y "+y
vnoremap <leader>y "+y
nnoremap <leader>Y "+Y
nnoremap Y y$ 

nnoremap <leader>p "+p
nnoremap <leader>P "+P
vnoremap <leader>p "+p

"Visual mode"
vnoremap <lt> <lt>gv
vnoremap > >gv

" Miscellaneous"
nnoremap <leader>w :w!<cr>
nnoremap <leader>r :reg<CR>
noremap <C-s> :w<CR>

